<% form_for( :rackspace_demonstration, @rackspace_demonstration, :url => { :controller => 'actions', :action => 'update' },  :html => { :id => 'edit_action' } ) do |f| %>
  <%= f.error_messages %>

  <li>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </li>
  <li>
    <%= f.label :comments %>
    <%= f.text_area :comments, :rows => 3 %>
  </li>
  <li>
    <%= f.label 'Operation'%>
    <%= select_tag('rackspace_demonstration[operation]', options_for_select(RackspaceDemonstration::OPERATION_LIST, @rackspace_demonstration.operation)) %>
  </li>

<% end %>
